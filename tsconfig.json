{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@screens/*": ["src/screens/*"],
      "@screens": ["src/screens"],
      "@hooks/*": ["src/hooks/*"],
      "@hooks": ["src/hooks"],
      "@services/*": ["src/services/*"],
      "@services": ["src/services"],
      "@utils/*": ["src/utils/*"],
      "@utils": ["src/utils"],
      "@assets/*": ["src/assets/*"],
      "@assets": ["src/assets"],
      "@theme/*": ["src/theme/*"],
      "@theme": ["src/theme"],
      "@types/*": ["src/types/*"],
      "@types": ["src/types"],
      "@store/*": ["src/store/*"],
      "@store": ["src/store"],
      "@navigation/*": ["src/navigation/*"],
      "@navigation": ["src/navigation"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}
